            </li>

            <li class="ms-NavBar-item">
                @Html.ActionLink("Pages", "ShowPageTimes", "ResponseTimes", new {area = ""}, new {@class = "ms-NavBar-link ms-Button ms-Button--primary", style = "line-height: 0px; display: inline; color: white"})
            </li>

            <li class="ms-NavBar-item">
                @Html.ActionLink("Report", "Report", "Report", new {area = ""}, new {@class = "ms-NavBar-link ms-Button ms-Button--primary", style = "line-height: 0px; display: inline; color: white" })
            </li>
        </ul>
        @Html.Partial("_LoginPartial")
    </div>




<div class="container body-content">

    @RenderBody()

    @if (IsSectionDefined("ControlsSection"))
    {
        <div class="cols-iframe">
            @Html.EJ().Button("slidepanel").Type(ButtonType.Button).ContentType(ContentType.ImageOnly).PrefixIcon("slidepanel-nav").ClientSideEvents(ce => ce.Click("ShowPanelClick")).ShowRoundedCorner(true).Width("45px").Height("45px").CssClass("slidemenuicon")
            <br/>&nbsp
            @if (IsSectionDefined("SampleHeading"))
            {
                <div>
                    <div class="sampleheadingtext">
                        @RenderSection("SampleHeading", required: false)
                    </div>
                </div>
            }
            <div>
                <div id="samplefile" class="sample-container">
                    <div>
                        <div class="content-container-fluid">
                            <div class="row">
                                <div class="cols-sample-area">
                                    @RenderSection("ControlsSection", required: false)
                                </div>
                                @if (IsSectionDefined("PropertiesSection"))
                                {
                                    <div id="sampleProperties">
                                        <div class="prop-grid keyboard">
                                            @RenderSection("PropertiesSection", required: false)
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Page Monitor Application</p>
    </footer>
</div>

@Html.EJ().ScriptManager()

@if (IsSectionDefined("ScriptSection"))
{
    @RenderSection("ScriptSection", required: false)
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

<script src="~/Scripts/OfficeNavBarPlugin.js" language="javascript" type="text/javascript"></script>


<script>
    function samplepageload() {
        $("#controlarea").css('visibility', 'visible');
        $(".deskmob").css('visibility', 'visible');
    }
</script>
</body>
</html>
