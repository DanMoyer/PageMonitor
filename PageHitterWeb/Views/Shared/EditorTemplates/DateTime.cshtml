@model DateTime?

@Html.TextBox("",  (Model.HasValue ? Model.Value.ToShortDateString() : string.Empty),
    htmlAttributes: new
    {
        style = "width:150px",
        @class = "form-control ",
        type = "date",
        data_date_format = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()
    })
